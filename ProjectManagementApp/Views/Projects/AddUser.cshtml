@model ProjectAddUserViewModel

<h4>Add User</h4>

<p>Add someone new to the project.</p>

<form asp-action="AddUser">
    <select class="form-group" asp-for="UserId"
        asp-items="@(new SelectList(Model.Users,"Id","Email"))">
    </select>

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>

</form>